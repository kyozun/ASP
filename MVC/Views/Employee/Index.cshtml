<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="my-3 text-primary fw-bold">Employee</h2>
        <a class="btn btn-success fw-bold" asp-controller="Category" asp-action="Create">Create</a>
    </div>

    <div class="text-center">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Department</th>
                <th scope="col">Rank</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td style="width: 10%">@employee.Id</td>
                    <td style="width: 20%">@employee.Employee_Name</td>
                    <td style="width: 20%">@employee.Employee_Code</td>
                    <td style="width: 10%">@employee.Department</td>
                    <td style="width: 10%">@employee.Rank</td>
                    <td >
                        <a class="me-2 btn btn-primary px-3 py-2 text-white mr-2" asp-controller="Category" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                        <a class="me-2 btn btn-danger px-3 py-2 text-white" asp-controller="Category" asp-action="Delete" asp-route-id="@employee.Id" asp-route-id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>